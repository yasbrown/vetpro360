<h1>Add New Animal</h1>

<%= simple_form_for [@user, @animal] do |f| %>
  <%= f.input :name, label: "Animal name", placeholder: "Max" %>
  <%= f.input :species, collection: Animal::SPECIES, prompt: "Dog/cat" %>
  <% if f.input.value == "Dog" %>
    <%= f.input :breed, collection: Animal::DOG_BREEDS %>
  <% elseif f.input.value == "Cat" %>
    <%= f.input :breed, collection: Animal::CAT_BREEDS %>
  <% end %>
  <%= f.input :gender, collection: Animal::GENDER, label: "Gender", prompt: "Male/female" %>
  <%= f.submit "Save animal", class: "btn btn-primary" %>
<% end %>
