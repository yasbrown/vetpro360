<div class="container pt-5">
  <div class="all-users-header d-flex justify-content-between align-items-center">
    <h1>All users</h1>
    <%= link_to "Back to homepage", root_path %>
  </div>
  <hr>

  <ul>
    <% @users.each do |user| %>
      <li><%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %></li>
    <% end %>
  </ul>
</div>
