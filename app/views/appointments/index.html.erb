<%= link_to "See all users", users_path %>

<hr>

<div class="container">
  <h1>Appointments available today</h1>

  <% @available_slots.each do |slot| %>
    <div class="flex">
      <p>start time: <%= slot.start_time.strftime("%H:%M:%S") %></p>
      <p>end time:<%= slot.end_time.strftime("%H:%M:%S") %></p>
      <%= link_to "Book this appointment", new_slot_appointment_path(slot) %>
    </div>
  <% end %>

  <hr>

  <h1>Booked appointments</h1>

  <% @booked_appointments.each do |appointment| %>
